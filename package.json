{
  "name": "promiseful-connect-sdk",
  "version": "1.2.0",
  "description": "A wrapper around connect-sdk-nodejs that uses promises instead of callbacks",
  "homepage": "https://github.com/robtimus/promiseful-connect-sdk",
  "bugs": {
    "url": "https://github.com/robtimus/promiseful-connect-sdk/issues"
  },
  "license": "MIT",
  "author": "Rob Spoor",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/robtimus/promiseful-connect-sdk.git"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint ./src --ext .ts",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "format:check": "prettier --check \"**/*.+(json|ts|tsx)\"",
    "build": "npm run format:check && npm run lint && npm run compile",
    "test": "jest",
    "test:unit": "jest --group=unit",
    "test:integration": "jest --group=integration"
  },
  "dependencies": {
    "connect-sdk-nodejs": "^4.3.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/node": "^8.10.66",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "body-parser": "^1.19.0",
    "eslint": "^8.4.1",
    "express": "^4.17.1",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "jest-each": "^27.4.2",
    "jest-junit": "^13.0.0",
    "jest-runner-groups": "^2.1.0",
    "prettier": "^2.5.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.2",
    "uuid": "^8.3.2"
  },
  "engines": {
    "node": ">=8"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 180
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format:check && npm run lint"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "runner": "groups",
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testPathIgnorePatterns": [
      "__tests__/integration/init.ts"
    ],
    "collectCoverage": true
  },
  "jest-junit": {
    "includeShortConsoleOutput": "true"
  }
}
